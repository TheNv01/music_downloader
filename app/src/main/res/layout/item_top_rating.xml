<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_top_ratting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-8dp">

        <ImageView
            android:id="@+id/background_rating"
            android:layout_width="155dp"
            android:layout_height="229dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/trending_test"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_background_text"
            android:layout_width="136dp"
            android:layout_height="37dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="7dp"
            android:background="@color/transparent"
            app:layout_constraintBottom_toBottomOf="@id/background_rating"
            app:layout_constraintEnd_toEndOf="@id/background_rating"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/background_rating" />

        <TextView
            android:id="@+id/tv_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="Last Christmas"
            app:layout_constraintStart_toStartOf="@id/img_background_text"
            app:layout_constraintTop_toTopOf="@id/img_background_text"
            app:layout_constraintBottom_toTopOf="@+id/tv_music"
            android:layout_marginStart="6dp"
            app:layout_constraintVertical_chainStyle="packed"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:text="Devon Lane"
            app:layout_constraintStart_toStartOf="@id/img_background_text"
            app:layout_constraintTop_toBottomOf="@id/tv_single"
            app:layout_constraintBottom_toBottomOf="@id/img_background_text"
            android:layout_marginStart="6dp"
            app:layout_constraintVertical_chainStyle="packed"/>
        <View
            android:id="@+id/view"
            android:layout_width="136dp"
            android:layout_height="37dp"
            app:layout_constraintBottom_toTopOf="@+id/img_background_text"
            app:layout_constraintStart_toStartOf="@id/background_rating"/>

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_play"
            app:layout_constraintEnd_toEndOf="@id/img_background_text"
            app:layout_constraintBottom_toBottomOf="@id/img_background_text"
            app:layout_constraintTop_toTopOf="@id/view"
            android:layout_marginEnd="11dp"/>

        <com.maggie.stroketextviewlibrary.StrokeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1"
            android:fontFamily="@font/inter_black"
            android:textSize="50sp"
            android:textColor="@color/black"
            app:stroke="7.0"
            app:strokeColor="@color/white"
            android:layout_marginTop="-11dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


