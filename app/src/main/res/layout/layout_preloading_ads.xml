<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_container_medium_native"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ads"
    app:shimmer_base_color="#ccc">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:minHeight="50dp"
        android:orientation="vertical">

        <TextView
            style="@style/AdAttribution"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content" />

        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@color/lightTransparent"
            android:id="@+id/ad_app_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:paddingHorizontal="5dp"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/ad_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/lightTransparent"
            android:layout_marginStart="@dimen/normal_margin"
            app:layout_constraintTop_toTopOf="@id/ad_app_icon"
            app:layout_constraintStart_toEndOf="@id/ad_app_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rating_bar" />

        <TextView
            android:id="@+id/rating_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/lightTransparent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/normal_margin"
            app:layout_constraintTop_toBottomOf="@id/ad_headline"
            app:layout_constraintBottom_toBottomOf="@id/ad_app_icon"
            app:layout_constraintStart_toEndOf="@id/ad_app_icon"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_ads"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/lightTransparent"
            android:layout_marginTop="@dimen/small_margin"
            app:layout_constraintTop_toBottomOf="@id/rating_bar"
            app:layout_constraintStart_toStartOf="@id/ad_app_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@color/lightTransparent"
            app:layout_constraintTop_toBottomOf="@id/tv_ads"
            android:layout_marginTop="@dimen/normal_margin"/>

        <View
            android:layout_width="90dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/lightTransparent"
            app:layout_constraintTop_toBottomOf="@+id/img"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
