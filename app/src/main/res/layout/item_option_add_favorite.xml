<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:paddingTop="@dimen/small_margin"
    android:paddingBottom="@dimen/small_margin"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_holder"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/bg_ripple_gray"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/ic_option"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_holder"
        app:layout_constraintBottom_toBottomOf="@+id/view_holder"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating App"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/ic_option"
        app:layout_constraintStart_toEndOf="@+id/ic_option"
        app:layout_constraintBottom_toBottomOf="@id/ic_option"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>


