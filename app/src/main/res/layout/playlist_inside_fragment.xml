<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="4dp"
            android:layout_height="17dp"
            android:src="@drawable/kebab_menu_listened"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/ic_back"
            app:layout_constraintBottom_toBottomOf="@id/ic_back"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/bg_playlist"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:background="@drawable/bg_create_playlist"
            app:layout_constraintStart_toStartOf="@id/ic_back"
            app:layout_constraintTop_toBottomOf="@id/ic_back"
            android:layout_marginTop="48dp"/>

        <ImageView
            android:layout_width="39dp"
            android:layout_height="42dp"
            android:background="@drawable/ic_music"
            app:layout_constraintStart_toStartOf="@id/bg_playlist"
            app:layout_constraintEnd_toEndOf="@id/bg_playlist"
            app:layout_constraintTop_toTopOf="@id/bg_playlist"
            app:layout_constraintBottom_toBottomOf="@id/bg_playlist"/>

        <TextView
            android:id="@+id/tv_name_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name playlist"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginStart="17dp"
            app:layout_constraintStart_toEndOf="@id/bg_playlist"
            app:layout_constraintTop_toTopOf="@id/bg_playlist"
            app:layout_constraintBottom_toTopOf="@id/tv_quantity_song"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            android:id="@+id/tv_quantity_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60 songs"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:alpha="0.5"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="@id/tv_name_playlist"
            app:layout_constraintBottom_toBottomOf="@id/bg_playlist"
            app:layout_constraintTop_toBottomOf="@id/tv_name_playlist"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_playlist_inside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_playlist"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:layout_marginTop="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
