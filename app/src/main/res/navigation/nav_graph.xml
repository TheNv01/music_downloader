<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.musicdownloader.view.fragment.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_homeFragment_to_seeAllFragment"
            app:destination="@id/seeAllFragment" />
        <action
            android:id="@+id/action_homeFragment_to_changeRegionDialog"
            app:destination="@id/changeRegionDialog" />
    </fragment>
    <fragment
        android:id="@+id/playListFragment"
        android:name="com.example.musicdownloader.view.fragment.PlayListFragment"
        android:label="PlayListFragment"
        tools:layout="@layout/play_list_fragment"/>
    <fragment
        android:id="@+id/downloadFragment"
        android:name="com.example.musicdownloader.view.fragment.DownloadFragment"
        android:label="DownloadFragment"
        tools:layout="@layout/download_fragment"/>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.musicdownloader.view.fragment.SettingFragment"
        android:label="SettingFragment"
        tools:layout="@layout/setting_fragment"/>
    <fragment
        android:id="@+id/seeAllFragment"
        android:name="com.example.musicdownloader.view.fragment.SeeAllFragment"
        android:label="SeeAllFragment" >
        <argument
            android:name="option"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <dialog
        android:id="@+id/changeRegionDialog"
        android:name="com.example.musicdownloader.view.ChangeRegionDialog"
        android:label="ChangeRegionDialog" />

</navigation>