<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/img_test"
            android:layout_width="match_parent"
            android:layout_height="490dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:layout_marginStart="16dp"
            android:translationZ="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp" />
        <Constraint
            android:id="@+id/ic_menu"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="4dp"
            android:layout_height="17dp"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="@id/ic_back"
            android:layout_marginEnd="16dp"
            android:alpha="1"
            app:layout_constraintTop_toTopOf="@id/ic_back" />
        <Constraint
            android:id="@+id/view_blur"
            android:layout_width="match_parent"
            android:layout_height="490dp"
            app:layout_constraintTop_toTopOf="parent"
            android:translationZ="1dp"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/img_circle"
            android:layout_width="229dp"
            android:layout_height="229dp"
            android:translationZ="3dp"
            app:layout_constraintBottom_toBottomOf="@id/view_blur"
            app:layout_constraintTop_toTopOf="@id/view_blur"
            app:layout_constraintStart_toStartOf="@id/view_blur"
            app:layout_constraintEnd_toEndOf="@id/view_blur"/>


        <Constraint
            android:id="@+id/tv_single"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="2dp"
            app:layout_constraintBottom_toTopOf="@id/tv_music"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@id/layout_control" />
        <Constraint
            android:id="@+id/tv_music"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/layout_control"
            app:layout_constraintTop_toBottomOf="@id/tv_single"
            android:layout_marginStart="16dp"
            android:translationZ="2dp"
            app:layout_constraintVertical_chainStyle="packed" />
        <Constraint
            android:id="@+id/ic_play"
            app:layout_constraintEnd_toEndOf="@id/layout_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="2dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@id/layout_control"
            app:layout_constraintTop_toTopOf="@id/layout_control"
            app:layout_constraintStart_toStartOf="@id/layout_control"/>


        <Constraint
            android:id="@+id/ic_close"
            app:layout_constraintEnd_toEndOf="@id/view_blur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@id/tv_music"
            app:layout_constraintTop_toTopOf="@id/tv_single" />
        <Constraint
            android:id="@+id/seek_bar"
            app:layout_constraintEnd_toEndOf="@id/img_circle"
            android:layout_width="290dp"
            android:layout_height="250dp"
            android:rotationY="180"
            android:translationZ="2dp"
            app:layout_constraintTop_toTopOf="@id/img_circle"
            app:layout_constraintBottom_toBottomOf="@id/img_circle"
            android:rotation="180"
            app:layout_constraintStart_toStartOf="@+id/img_circle"
            android:layout_marginTop="28dp"/>

        <Constraint
            android:id="@+id/layout_control"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_blur"
            android:alpha="1"
            android:translationZ="1dp"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/ic_favorite"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:alpha="1"
            app:layout_constraintTop_toTopOf="@+id/tv_single" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/start">

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:motionInterpolator="easeInOut">

        <KeyFrameSet >

            <KeyAttribute
                app:motionTarget="@+id/ic_back"
                app:framePosition="95"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/ic_menu"
                app:framePosition="95"
                android:alpha="0" />

            <KeyAttribute
                app:motionTarget="@+id/tv_music"
                app:framePosition="95"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/tv_single"
                app:framePosition="95"
                android:alpha="0" />

            <KeyAttribute
                app:motionTarget="@+id/tv_music"
                app:framePosition="5"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/tv_single"
                app:framePosition="5"
                android:alpha="0" />

            <KeyAttribute
                app:motionTarget="@+id/ic_play"
                app:framePosition="5"
                android:alpha="0"/>

            <KeyAttribute
                app:motionTarget="@+id/ic_close"
                app:framePosition="5"
                android:alpha="1"/>

            <KeyAttribute
                app:motionTarget="@+id/layout_control"
                app:framePosition="5"
                android:alpha="0"/>

            <KeyAttribute
                app:motionTarget="@+id/img_circle"
                app:framePosition="5"
                android:alpha="0"/>

            <KeyAttribute
                app:motionTarget="@+id/img_circle"
                app:framePosition="95"
                android:alpha="0"/>


            <KeyAttribute
                app:motionTarget="@+id/seek_bar"
                app:framePosition="5"
                android:alpha="0">
                <CustomAttribute
                    app:attributeName="progressBackgroundWidth"
                    app:customDimension="2dp"/>
            </KeyAttribute>

            <KeyAttribute
                app:motionTarget="@+id/seek_bar"
                app:framePosition="5"
                android:alpha="0">
                <CustomAttribute
                    app:attributeName="progressWidth"
                    app:customDimension="2dp"/>
            </KeyAttribute>

            <KeyAttribute
                app:motionTarget="@+id/seek_bar"
                app:framePosition="95"
                android:alpha="0">
                <CustomAttribute
                    app:attributeName="progressBackgroundWidth"
                    app:customDimension="4dp"/>
            </KeyAttribute>

            <KeyAttribute
                app:motionTarget="@+id/seek_bar"
                app:framePosition="95"
                android:alpha="0">
                <CustomAttribute
                    app:attributeName="progressWidth"
                    app:customDimension="4dp"/>
            </KeyAttribute>

        </KeyFrameSet>
        <OnSwipe app:touchAnchorId="@+id/img_test"
            app:dragDirection="dragUp"
            app:touchAnchorSide="top"/>
    </Transition>
</MotionScene>
